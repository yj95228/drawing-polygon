{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "jsx": "preserve",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "container/*": ["container/*"],
      "store/*": ["store/*"]
    },
    "typeRoots": ["@types", "node_modules/@types"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules"]
}
